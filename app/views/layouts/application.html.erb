<!DOCTYPE html>
<html>
<head>
  <title>Fabmanager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<img id="logo" class="site-logo-img" src="/images/ZBFablab.png" />
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="/homepage">Fabmanager</a>
		    </div>

		    <div class="collapse navbar-collapse" id="navbar-collapse">
		        <ul class="nav navbar-nav">
		        	<li><%= button_to 'Fabmomenten', fabmoments_path, method: "get", class: "btn btn-default navbar-btn" %></li>
		        </ul>

		        <ul class="nav navbar-nav nav pull-right">
		        	<li><%= button_to "Registreren", new_user_registration_path, method: "get", class: "btn btn-default navbar-btn" %></li>
		        	<% if !user_signed_in? %>
		        	<li><%= button_to "Inloggen", new_user_session_path, method: "get", class: "btn btn-default navbar-btn" %> </li>
		        	<% else %>
		        	<li><%= button_to "Uitloggen", destroy_user_session_path, method: "delete", class: "btn btn-default navbar-btn" %></li>
		        	<% if current_user.admin? %>
		        	<li><%= button_to "Gebruikers", admin_index_path, method: "get", class: "btn btn-default navbar-btn" %></li>
		        	<% end %>
		        	<li><%= button_to "Profiel", user_path(current_user), method: "get", class: "btn btn-default navbar-btn" %></li>
		        	<% end %>
		        </ul>		      
		    </div>
		</nav>

		<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<%= yield %>

<div class="push"></div>

<div class="footer">
	<div class="mlogo">
		<b>© Copyright 2016 –</b>
		<b><i><%= link_to "Fablab Zeeland",  "http://www.dezb.nl/wat-we-doen/fablabzeeland.html", class: "mlogo-a", method: "get", form: {target: '_blank'} %></i></b>
	</div>
</div>
</body>
</html>

<script type="text/javascript">
var logoImg = document.getElementById('logo')

$(window).load = function() {
    $('logoImg').hide().fadeIn(500);
};
</script>
